.action-button
    display inline-block
    font-size 1.2rem
    color #fff
    background-color #1e73be
    padding 0.8rem 1.6rem
    border-radius 4px
    transition background-color .1s ease
    box-sizing border-box
    border-bottom 1px solid darken(#1e73be, 10%)
    &:hover
        background-color lighten(#1e73be, 10%)

h3, h4
    font-size 1.35rem

